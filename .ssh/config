# Particularly long hostnames/usernames need custom ControlPaths
Host *.drush.in
  ControlPath /tmp/ssh_mux_drush.in

# Re-use existing connections instead of opening new ones
ControlMaster auto
ControlPath /tmp/ssh_mux_%h_%p_%r

Host *
  ServerAliveCountMax 4
  ServerAliveInterval 15
  # Agent Forwarding
  ForwardAgent yes

# Host Aliases and specific settings
Host dev ohthehugemanatee.org dev.nodesymphony.com
  HostName 54.174.201.36
  User ec2-user
  ForwardAgent yes
  IdentityFile /Volumes/Secure/keys/cvertesi-aws-2014.pem

